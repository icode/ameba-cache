<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>ameba-cache</artifactId>
        <groupId>org.amebastack.module</groupId>
        <version>0.1.1</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>ameba-cache-core</artifactId>

    <name>Ameba-Framework-Cache-Core</name>
    <description>A useful Java framework cache core!</description>

    <url>http://amebastack.org</url>
    <inceptionYear>2014</inceptionYear>

    <licenses>
        <license>
            <name>MIT</name>
            <url>https://raw.githubusercontent.com/intelligentcode/ameba-cache/master/LICENSE</url>
            <distribution>repo</distribution>
            <comments>The MIT License (MIT)</comments>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/intelligentcode/ameba-cache</url>
        <connection>scm:git:https://github.com/intelligentcode/ameba-cache.git</connection>
        <developerConnection>scm:git:git@github.com:intelligentcode/ameba-cache.git</developerConnection>
    </scm>

    <issueManagement>
        <system>github</system>
        <url>https://github.com/intelligentcode/ameba-cache/issues</url>
    </issueManagement>

    <developers>
        <developer>
            <name>Zhang Lixin</name>
            <email>intelligentcodemail A gmail D com</email>
            <roles>
                <role>Developer</role>
            </roles>
            <timezone>+8</timezone>
        </developer>
    </developers>

    <dependencies>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.9</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>

                <dependency>
                    <groupId>com.h2database</groupId>
                    <artifactId>h2</artifactId>
                    <version>1.3.173</version>
                </dependency>

                <dependency>
                    <groupId>org.amebastack.container</groupId>
                    <artifactId>ameba-container-grizzly</artifactId>
                    <version>${ameba.container.version}</version>
                </dependency>

                <dependency>
                    <groupId>org.glassfish.grizzly</groupId>
                    <artifactId>grizzly-memcached</artifactId>
                    <version>${grizzly.ext.memcached.version}</version>
                    <exclusions>
                        <exclusion>
                            <artifactId>grizzly-framework</artifactId>
                            <groupId>org.glassfish.grizzly</groupId>
                        </exclusion>
                        <exclusion>
                            <artifactId>log4j</artifactId>
                            <groupId>log4j</groupId>
                        </exclusion>
                        <exclusion>
                            <artifactId>zookeeper</artifactId>
                            <groupId>org.apache.zookeeper</groupId>
                        </exclusion>
                    </exclusions>
                </dependency>
                <dependency>
                    <groupId>net.sf.ehcache</groupId>
                    <artifactId>ehcache</artifactId>
                    <version>2.8.3</version>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <properties>
        <ameba.container.version>${ameba.version}</ameba.container.version>
        <grizzly.ext.memcached.version>1.3.10</grizzly.ext.memcached.version>
    </properties>

</project>